    "screenshots": [
        {
            "src": "/images/screenshot-wide.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "واجهة CADverter الرئيسية"
        },
        {
            "src": "/images/screenshot-narrow.png",
            "sizes": "720x1280",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "واجهة CADverter على الهاتف"
        }
    ],
    "shortcuts": [
        {
            "name": "تحويل جديد",
            "short_name": "تحويل",
            "description": "بدء تحويل ملف جديد",
            "url": "/?action=convert",
            "icons": [
                {
                    "src": "/images/shortcut-convert.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "سجل التحويلات",
            "short_name": "السجل",
            "description": "عرض سجل التحويلات السابقة",
            "url": "/?action=history",
            "icons": [
                {
                    "src": "/images/shortcut-history.png",
                    "sizes": "96x96"
                }
            ]
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false,
    "display_override": ["window-controls-overlay", "standalone", "browser"],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": ["navigate-existing", "auto"]
    },
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "files",
                    "accept": [".dwg", ".dxf"]
                }
            ]
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+cadverter",
            "url": "/open?file=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/open-file",
            "accept": {
                "application/dxf": [".dxf"],
                "application/acad": [".dwg"],
                "application/x-autocad": [".dwg", ".dxf"]
            }
        }
    ],
    "permissions_policy": [
        "accelerometer",
        "camera",
        "geolocation",
        "gyroscope",
        "magnetometer",
        "microphone",
        "payment",
        "usb"
    ],
    "features": [
        "ForceDarkening",
        "Fullscreen"
    ]
}
